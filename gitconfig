[include]
  path = .gitconfig.local
[color]
  ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow bold
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow bold
  changed = green
  untracked = cyan
[core]
  excludesfile = /Users/dborin/.gitignore
  editor = vim
[branch]
  autosetupmerge = true
[alias]
  st = status
  pl = pull --rebase
  pu = push
  ci = commit
  br = branch
  co = checkout
  cob = checkout -b
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files

  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard


[push]
	default = upstream
